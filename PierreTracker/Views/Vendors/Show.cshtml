@{
  Layout = "_Layout";
}
@using PierreTracker.Models;
@await Html.PartialAsync("SecondNavbar")
<h1 class="text-center text-5xl my-10">Vendor @Model["vendor"].Name</h1>
<div class="container flex flex-col justify-center items-center">
  @if (@Model["orders"].Count == 0)
  {
    <p>This vendor has no orders currently.</p>
  }
  <section class="flex flex-col items-center justify-center p-8 gap-3 divide-y divide-dashed divide-slate-500">
    @foreach (Order order in @Model["orders"])
    {
      <div><a class="text-2xl" href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></div>
    }
  </section>
</div>