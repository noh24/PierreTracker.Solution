@{
  Layout = "_Layout";
}
@using PierreTracker.Models;
<h1 class="text-center text-5xl my-10">Current Vendors</h1>
<div>
  @if (@Model.Count == 0)
  {
    <p>You do not have any vendors currently.</p>
  }
  <section class="flex flex-col items-center justify-center p-8 gap-3 divide-y divide-dashed divide-slate-500">
    @foreach (Vendor vendor in @Model)
    {
      <div><a class="text-2xl" href="/vendors/@vendor.Id">@vendor.Name</a></div>
    }
  </section>
</div>