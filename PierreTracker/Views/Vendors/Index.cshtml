@{
  Layout = "_Layout";
}
@using PierreTracker.Models;
<h1 class="text-center text-5xl py-10 w-full bg-slate-100">Current Vendors</h1>
<div class="border border-slate-100 rounded-xl bg-slate-100 mt-10 w-1/3 shadow-lg">
  @if (@Model.Count == 0)
  {
    <div class="flex justify-center items-center w-full mt-10 text-xl font-medium">
      <p>You do not have any vendors currently.</p>
    </div>
  }
  <section class="flex flex-col items-center justify-center p-8 gap-3 divide-y divide-dashed divide-slate-500 w-full">
    @foreach (Vendor vendor in @Model)
    {
      <div class="flex justify-between items-center pt-2 w-full">
        <a class="text-2xl hover:text-slate-400 active:text-slate-400" href="/vendors/@vendor.Id">@vendor.Name</a>
        <form action="/vendors/delete" method="post">
          <button type="submit" value="@vendor.Id" name="id" class="text-lg border rounded-full px-3 py-1 bg-blue-100 hover:bg-blue-200 border-blue-200 shadow-md">Delete</button>
        </form>
      </div>
    }
  </section>
</div>