@{
  Layout = "_Layout";
}
@using PierreTracker.Models;
<h1 class="text-center text-5xl py-10 w-full bg-slate-100">Current Vendors</h1>
<div class="border border-slate-100 rounded-xl bg-slate-100 mt-10 w-1/3 shadow-lg">
  @if (@Model.Count == 0)
  {
    <p>You do not have any vendors currently.</p>
  }
  <section class="flex flex-col items-center justify-center p-8 gap-3 divide-y divide-dashed divide-slate-500">
    @foreach (Vendor vendor in @Model)
    {
      <div><a class="text-2xl hover:text-slate-400 active:text-slate-400" href="/vendors/@vendor.Id">@vendor.Name</a></div>
    }
  </section>
</div>