@{
  Layout = "_Layout";
}
@using PierreTracker.Models;
<h1 class="text-center text-5xl py-10 w-full bg-slate-100">Order @Model["order"].Title for Vendor @Model["vendor"].Name</h1>
<div class="container flex flex-col justify-center items-center border border-slate-100 rounded-xl bg-slate-100 mt-10 w-1/3 shadow-lg">
  <section class="flex flex-col items-between justify-center py-5 px-3 gap-4 text-xl divide-y divide-dashed divide-slate-500 w-full">
    <p class="flex justify-between"><span>Order Title: </span>@Model["order"].Title</p>
    <p class="flex justify-between pt-2"><span>Order Description: </span>@Model["order"].Description</p>
    <p class="flex justify-between pt-2"><span>Order Delivery Date: </span>@Model["order"].DeliveryDate</p>
    <p class="flex justify-between pt-2"><span>Order Price: </span>@Model["order"].Price</p>
  </section>
@await Html.PartialAsync("SecondNavbar")
</div>